<Application x:Class="IPPopper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default to LightTheme for design-time; will be replaced at runtime -->
                <ResourceDictionary Source="Themes/LightTheme.xaml" />
                <!-- Global tooltip style must be last so it wins over theme styles -->
                <ResourceDictionary Source="Themes/ToolTips.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
