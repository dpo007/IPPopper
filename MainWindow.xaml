<Window x:Class="IPPopper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPPopper"
        mc:Ignorable="d"
        Title="IP Popper - IP Address Information" 
        Height="500" Width="600"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        MinHeight="300" MinWidth="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Current IP Addresses" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

        <!-- IP List -->
        <DataGrid Grid.Row="1" 
                  x:Name="IPDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="False"
                  Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IP Address" Binding="{Binding Address}" Width="150"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                <DataGridTextColumn Header="Interface" Binding="{Binding InterfaceName}" Width="*"/>
                <DataGridTextColumn Header="Primary" Binding="{Binding IsPrimary}" Width="60"/>
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPrimary}" Value="True">
                            <Setter Property="Background" Value="LightGreen"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- Primary IP Display -->
        <Border Grid.Row="2" 
                Background="LightBlue" 
                Padding="10" 
                Margin="0,0,0,15"
                CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Primary IP: " FontWeight="Bold"/>
                <TextBlock x:Name="PrimaryIPTextBlock" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="CopyPrimaryButton" 
                    Content="Copy Primary IP" 
                    Padding="15,5" 
                    Margin="0,0,10,0"
                    Click="CopyPrimaryButton_Click"/>
            <Button x:Name="CopyAllButton" 
                    Content="Copy All IPs" 
                    Padding="15,5" 
                    Margin="10,0,10,0"
                    Click="CopyAllButton_Click"/>
            <Button x:Name="RefreshButton" 
                    Content="Refresh" 
                    Padding="15,5" 
                    Margin="10,0,10,0"
                    Click="RefreshButton_Click"/>
            <Button x:Name="CloseButton" 
                    Content="Close" 
                    Padding="15,5" 
                    Margin="10,0,0,0"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
