<Window x:Class="IPPopper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="IPPopper - IP Address Information"
        Height="500" Width="600"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        MinHeight="300" MinWidth="400"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   x:Name="HeaderTextBlock"
                   Text="Current IP Addresses"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource ForegroundBrush}" />

        <!-- IP List -->
        <DataGrid Grid.Row="1"
                  x:Name="IPDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="False"
                  Margin="0,0,0,15"
                  Background="{DynamicResource BackgroundBrush}"
                  Foreground="{DynamicResource ForegroundBrush}"
                  BorderBrush="{DynamicResource BorderBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IP Address" Binding="{Binding Address}" Width="130" />
                <DataGridTextColumn Header="MAC Address" Binding="{Binding MacAddress}" Width="140" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" />
                <DataGridTextColumn Header="Interface" Binding="{Binding InterfaceName}" Width="*" />
                <DataGridTextColumn Header="Primary" Binding="{Binding IsPrimary}" Width="60" />
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPrimary}" Value="True">
                            <Setter Property="Background" Value="{DynamicResource HighlightBrush}" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- Primary IP Display -->
        <Border Grid.Row="2"
                Background="{DynamicResource PrimaryAccentBrush}"
                Padding="10"
                Margin="0,0,0,15"
                CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Primary IP: " FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}" />
                <TextBlock x:Name="PrimaryIPTextBlock" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}" />
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="CopyNameButton"
                    Content="Copy Name"
                    Padding="15,5"
                    Margin="0,0,10,0"
                    ToolTip="Copy this computer's name to the clipboard"
                    Click="CopyNameButton_Click"
                    Foreground="{DynamicResource ForegroundBrush}" />
            <Button x:Name="CopyPrimaryButton"
                    Content="Copy Primary IP"
                    Padding="15,5"
                    Margin="10,0,10,0"
                    ToolTip="Copy the primary local IP address to the clipboard"
                    Click="CopyPrimaryButton_Click"
                    Foreground="{DynamicResource ForegroundBrush}" />
            <Button x:Name="CopyAllButton"
                    Content="Copy All IPs"
                    Padding="15,5"
                    Margin="10,0,10,0"
                    ToolTip="Copy a formatted report of all detected IP addresses to the clipboard"
                    Click="CopyAllButton_Click"
                    Foreground="{DynamicResource ForegroundBrush}" />
            <Button x:Name="RefreshButton"
                    Content="Refresh"
                    Padding="15,5"
                    Margin="10,0,10,0"
                    ToolTip="Refresh the list of IP addresses"
                    Click="RefreshButton_Click"
                    Foreground="{DynamicResource ForegroundBrush}" />
            <Button x:Name="HideButton"
                    Content="Hide"
                    Padding="15,5"
                    Margin="10,0,0,0"
                    ToolTip="Hide this window (the app will continue running in the system tray)"
                    Click="HideButton_Click"
                    Foreground="{DynamicResource ForegroundBrush}" />
        </StackPanel>
    </Grid>
</Window>
