<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Win11-ish tooltip style (applies app-wide) -->
	<Style TargetType="{x:Type ToolTip}">
		<!-- behavior -->
		<Setter Property="Placement" Value="Mouse" />
		<Setter Property="HasDropShadow" Value="False" />
		<Setter Property="OverridesDefaultStyle" Value="True" />

		<!-- look (same in all themes) -->
		<Setter Property="Foreground" Value="White" />
		<Setter Property="Background" Value="#CC1F1F1F" />
		<Setter Property="Padding" Value="10,6" />
		<Setter Property="FontSize" Value="12" />

		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ToolTip}">
					<Border Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="8"
                            TextElement.Foreground="{TemplateBinding Foreground}">
						<Border.Effect>
							<DropShadowEffect BlurRadius="18"
                                              ShadowDepth="4"
                                              Opacity="0.35" />
						</Border.Effect>

						<ContentPresenter RecognizesAccessKey="True">
							<ContentPresenter.Resources>
								<Style TargetType="TextBlock">
									<Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource AncestorType=ToolTip}, Path=Foreground}" />
								</Style>
							</ContentPresenter.Resources>
						</ContentPresenter>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
